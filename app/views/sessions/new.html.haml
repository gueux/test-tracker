%h1 New session

.form
  - if flash[:alert] 
    %p#notice= flash[:alert]
  = form_tag do
    %fieldset
      %legend Please Log In
      #name
        = label_tag :login, 'Name:'
        = text_field_tag :login, params[:login]
      #password
        = label_tag :password, 'Password:'
        = password_field_tag :password, params[:password]
      #login
        = submit_tag "Login"
